// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  sentTrades    Trade[]   @relation("SentTrades")
  receivedTrades Trade[]  @relation("ReceivedTrades")
  draftPicks    DraftPick[]
  players       Player[]
  playerClaims  PlayerClaim[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AllowedEmail {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model DraftPick {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  round     Int      // 1, 2, or 3
  year      Int      // Draft year
  isTraded  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trades    TradeItem[]

  @@unique([userId, round, year])
}

model Trade {
  id           String      @id @default(cuid())
  fromUserId   String
  toUserId     String
  fromUser     User        @relation("SentTrades", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser       User        @relation("ReceivedTrades", fields: [toUserId], references: [id], onDelete: Cascade)
  status       String      @default("pending") // pending, accepted, rejected, cancelled
  items        TradeItem[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Player {
  id            String   @id @default(cuid())
  userId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  nhlPlayerId   String   @unique // PlayerID from NHL data
  name          String
  team          String?
  position      String
  headshotUrl   String?
  teamLogoUrl   String?
  jerseyNumber  Int?
  age           Int?
  dateOfBirth   String?
  birthCity     String?
  birthCountry  String?
  nationality   String?
  height        Int?     // Height in inches
  weight        Int?     // Weight in lbs
  draftYear     Int?
  draftTeam     String?
  draftRound    Int?
  draftPosition Int?
  isTraded      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  trades        TradeItem[]
  claims        PlayerClaim[]
}

model PlayerClaim {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  playerId    String
  player      Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  status      String   @default("pending") // pending, approved, rejected
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, playerId])
}

model TradeItem {
  id          String     @id @default(cuid())
  tradeId     String
  trade       Trade      @relation(fields: [tradeId], references: [id], onDelete: Cascade)
  draftPickId String?
  draftPick   DraftPick? @relation(fields: [draftPickId], references: [id], onDelete: Cascade)
  playerId    String?
  player      Player?    @relation(fields: [playerId], references: [id], onDelete: Cascade)
  direction   String     // "from" or "to" - indicates which user is giving this item
  createdAt   DateTime   @default(now())
}
